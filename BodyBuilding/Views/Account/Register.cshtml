@model BodyBuilding.Application.DTOs.AthleteRegisterDTO
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f093fb;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to bottom right, rgba(240, 147, 251, 1), rgba(245, 87, 108, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to bottom right, rgba(240, 147, 251, 1), rgba(245, 87, 108, 1))
    }

    .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
    }

    .card-registration .select-arrow {
        top: 13px;
    }
</style>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">فرم ثبت نام</h3>
                        <form asp-controller="Account" asp-action="Register" method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Name">نام</label>
                                        <input type="text" asp-for="Name" class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Family">نام خانوادگی</label>
                                        <input type="text" asp-for="Family" class="form-control form-control-lg" />
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="birthdayDate" class="form-label">تاریخ تولد</label>
                                        <input type="date" asp-for="BirthDay" class="form-control form-control-lg" id="birthdayDate" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <h6 class="mb-2 pb-1">جنسیت :</h6>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" asp-for="Gender" type="radio" name="inlineRadioOptions"
                                               value="option1" checked />
                                        <label class="form-check-label" for="femaleGender">مرد</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Gender" name="inlineRadioOptions"
                                               value="option2" />
                                        <label class="form-check-label" for="maleGender">زن</label>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="emailAddress">کد ملی</label>
                                        <input type="text" asp-for="NationalCode" class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="phoneNumber">شماره موبایل</label>
                                        <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg" />
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Email">پست الکترونیکی</label>
                                        <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Password">رمز عبور</label>
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="RePassword">تکرا رمز عبور</label>
                                        <input type="password" asp-for="RePassword" class="form-control form-control-lg" />
                                        <span style="color: red" asp-validation-for="RePassword"></span>
                                    </div>


                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="mt-1 pt-2">
                                        <input class="btn btn-primary btn-lg" type="submit" value="ثبت نام" />
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>